.order_list{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 300rpx;
  border-bottom: rgb(230, 238, 238) 2rpx solid;
}

.order_list1{
  display: flex;
  flex-direction: row;
  height: 140rpx;
}

.order_photo{
  width: 140rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.order_picture{
  width: 100rpx;
  height: 100rpx;
  border-style: solid;
  border-width: 3rpx;
  border-color: pink;
}

.order_right{
  width: 610rpx;
  height: 100%;
  display: flex;
  border-bottom: rgb(230, 238, 238) 2rpx solid;
}

.res_name{
  line-height: 140rpx;
  margin-left: 20rpx;
  font-size: 40rpx;
  font-weight: 600;
  font-family: serif;
}

.res_enter{
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.enter{
  width: 30rpx;
  height: 30rpx;
}

.order_state{
  line-height: 140rpx;
  width: 90rpx;
  font-size: 26rpx;
  font-weight: 300;
  margin-left: auto;
}

.order_list2{
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.commodity{
  line-height: 80rpx;
  margin-left: 160rpx;
}

.number{
  line-height: 80rpx;
  width: 60rpx;
  margin-left: auto;
}

.order_list3{
  height: 80rpx;
  text-align: right;
}